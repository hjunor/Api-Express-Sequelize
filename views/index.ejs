<%- include ('./partials/header.ejs') %>
<body>
  <%- include ('./partials/nav.ejs') %>
     <div class="container mt-3">
     <div class='container row'>
        <h3>Perguntas</h3>
        <a class='ml-5 btn btn-success btn-cor'href="/question"> Nova perguntar</a>
     </div>
   
      <hr>
     
       <% perguntas.map((pergunta )=>{ %>
          <div  class='mt-2 card'>
             <div class= 'card-body'>
               <h3><%= pergunta.titulo %></h3>
             </div>
             <p class='ml-4'><%= pergunta.description %></p>
             <div class='card-footer'>
             <a href="/pergunta/<%= pergunta.id %>">
               <button class="btn btn-success">Responder</button>
             </a>
             </div>
          </div>


       <% }) %>
  </div>
</body>
